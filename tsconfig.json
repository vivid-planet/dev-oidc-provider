{
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": true,
        "incremental": true,
        "lib": ["ES2020"],
        "module": "CommonJS",
        "outDir": "./lib",
        "removeComments": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "target": "ES2015"
    },
    "exclude": ["node_modules", "lib"],
    "include": ["src/**/*", "demo.ts"]
}
